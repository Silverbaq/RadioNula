<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.radionula.fragments.PlayerFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">



        <!-- Top -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/fragment_top_ivRecord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginBottom="-300dp"
                android:layout_marginLeft="-75dp"
                android:layout_marginRight="-75dp"
                android:clipChildren="false"
                android:src="@drawable/record" />

            <ImageView
                android:id="@+id/fragment_top_ivLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:scaleType="fitStart"
                android:src="@drawable/nula_logo_ch1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-125dp"

                android:gravity="center_horizontal"
                android:clipChildren="false">

                <!---->
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/fragment_top_ivRecordImage"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:border="false"/>

            </LinearLayout>


        </RelativeLayout>



        <!-- Playlist -->
        <LinearLayout
            android:background="@color/BackgroundBlue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:id="@+id/fragment_playlist_ivShadow"
                android:src="@drawable/shadow"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/fragment_playlist_llPlaylist"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </LinearLayout>
            </ScrollView>

        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center_vertical"
        android:gravity="center"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/fragment_controls_ivSkip"
            android:paddingRight="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/button_skip"
            />

        <ImageView
            android:id="@+id/fragment_controls_ivPause"
            android:paddingLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/button_pause"
            />

    </LinearLayout>


</FrameLayout>
